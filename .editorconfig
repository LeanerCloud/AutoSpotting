# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

# Tab indentation is needed on Makefiles
[Makefile*]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4
